{% extends 'base.html.twig' %}

{% block title %}Edit Quote{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-6">
            <h3><i class="far fa-edit"></i> Edit Quote</h3>
        </div>
        <div class="col-sm-6">
            <div class="row">
                <div class="col-sm-4">
                </div>
                <div class="col-sm-3">
                </div>
                <div class="col-sm-5">
                    <div class="row">
                        <div class="col-sm-4">
                            {{ include('quote/_delete_form.html.twig') }}
                        </div>
                        <div class="col-sm-4">
                            <a class="btn btn-sm btn-secondary rounded-pill btn-block" href="{{ path('quote_index') }}"><i class="fas fa-times pr-1"></i> Cancel</a>
                        </div>
                        <div class="col-sm-4">
                            <button type="submit" form="quote-form" class="btn rounded-pill btn-success btn-sm mb-3 btn-block"><i class="far fa-save pr-1"></i> {{ button_label|default('Save') }}</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ include('quote/_form.html.twig') }}

{% endblock %}

{% block javascripts %}
    {% include 'quote/quotes_javascripts.html.twig' %}
{% endblock %}

